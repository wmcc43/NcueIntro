<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="clip_vertical"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:stretchColumns="0,1,2"
	android:paddingLeft="20px"
    android:paddingRight="20px"
	>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:text="Sudoku"
			android:textSize="20px"
		/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/sudoku_des"
			android:textSize="20px"
	/>
	</LinearLayout>
<TableRow>
	<EditText
		android:numeric="integer"
		android:id="@+id/num0"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
	<EditText
		android:numeric="integer"
		android:id="@+id/num1"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
	<EditText
		android:numeric="integer"
		android:id="@+id/num2"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
</TableRow>
<TableRow>
	<EditText
		android:numeric="integer"
		android:id="@+id/num3"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
	<EditText
		android:numeric="integer"
		android:id="@+id/num4"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
	<EditText
		android:numeric="integer"
		android:id="@+id/num5"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
</TableRow>
<TableRow>
	<EditText
		android:numeric="integer"
		android:id="@+id/num6"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
	<EditText
		android:numeric="integer"
		android:id="@+id/num7"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
	<EditText
		android:numeric="integer"
		android:id="@+id/num8"
		android:layout_width="40px"
		android:layout_height="40px"
	/>
</TableRow>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<Button
			android:id="@+id/sudoku_submit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:text="Submit"
			android:textSize="20px"
		/>
	</LinearLayout>
</TableLayout>
